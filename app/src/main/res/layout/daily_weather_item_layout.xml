<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/translucent"
    android:layout_marginBottom="4dp"
    android:id="@+id/daily_item_view"
    android:layout_height="72dp">

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:id="@+id/daily_weather_date"
        android:text="@string/missing_data"
        android:textSize="16sp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/daily_weather_date"
        android:layout_marginStart="24dp"
        android:id="@+id/daily_weather_day"
        android:text="@string/missing_data"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/daily_weather_temp"
        android:layout_marginEnd = "24dp"
        android:id="@+id/daily_weather_icon"
        android:contentDescription="@string/hourly_image"
        android:src="@drawable/weather_error"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:id="@+id/daily_weather_temp"
        android:lines="2"
        android:textStyle="bold"
        android:text="@string/missing_data"
        android:textSize="16sp"/>

</RelativeLayout>